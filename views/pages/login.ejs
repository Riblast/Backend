<!doctype html>
<html lang="es">

<head>
    <%-include('../partials/head.ejs')%>
</head>

<body>
    <section class="gradient-form h-screen bg-neutral-200 dark:bg-neutral-700">
        <div class="container h-full p-10">
            <div class="g-6 flex h-full items-center justify-center">
                <div class="w-fit">
                    <div class="rounded-lg bg-white shadow-lg">
                        <div class="g-0 lg:flex justify-center">
                            <div class="px-4 md:px-0">
                                <div class="md:mx-6 md:p-12">
                                    <div class="text-center">
                                        <h4 class="mt-1 mb-12 pb-1 text-xl font-semibold">
                                            Backend e-commerce
                                        </h4>
                                    </div>
                                    <form id="loginForm" action="/login" method="post">
                                        <p class="mb-4">Please login to your account</p>
                                        <div class="mb-4 relative group">
                                            <input type="email" name="username" id="email" required class="border rounded w-full h-10 px-4 text-sm peer outline-none">
                                            <label for="name" class="transform transition-all absolute top-0 left-0 h-full flex items-center pl-2 text-neutral-200 group-focus-within:text-orange-600 group-focus-within:text-xs peer-valid:text-xs group-focus-within:h-1/2 peer-valid:h-1/2 group-focus-within:-translate-y-full peer-valid:-translate-y-full group-focus-within:pl-0 peer-valid:pl-0">Email</label>
                                        </div>
                                        <div class="mb-4 relative group">
                                            <input type="password" name="password" id="password" required class="border rounded w-full h-10 px-4 text-sm peer outline-none">
                                            <label for="password" class="transform transition-all absolute top-0 left-0 h-full flex items-center pl-2 text-neutral-200 group-focus-within:text-orange-600 group-focus-within:text-xs peer-valid:text-xs group-focus-within:h-1/2 peer-valid:h-1/2 group-focus-within:-translate-y-full peer-valid:-translate-y-full group-focus-within:pl-0 peer-valid:pl-0">Password</label>
                                        </div>
                                        <div class="mb-12 pt-1 pb-1 text-center">
                                            <button
                                                class="mb-3 inline-block w-full rounded px-6 pt-2.5 pb-2 text-xs font-medium uppercase leading-normal bg-gradient-to-r from-orange-600 via-rose-600 to-pink-600 text-white shadow-[0_4px_9px_-4px_rgba(0,0,0,0.2)] transition duration-150 ease-in-out hover:shadow-[0_8px_9px_-4px_rgba(0,0,0,0.1),0_4px_18px_0_rgba(0,0,0,0.2)] focus:shadow-[0_8px_9px_-4px_rgba(0,0,0,0.1),0_4px_18px_0_rgba(0,0,0,0.2)] focus:outline-none focus:ring-0 active:shadow-[0_8px_9px_-4px_rgba(0,0,0,0.1),0_4px_18px_0_rgba(0,0,0,0.2)]"
                                                type="submit" id="btnLogin">
                                                Log in
                                            </button>
                                        </div>
                                        <div class="flex items-center justify-between pb-6">
                                            <p class="mb-0 mr-2">Don't have an account?</p>
                                            <button type="button" id="btnGoToRegister"
                                                onclick="location.href='/register'"
                                                class="inline-block rounded border-2 border-danger px-6 pt-2 pb-[6px] text-xs font-medium uppercase leading-normal bg-clip-text bg-gradient-to-r from-orange-600 via-rose-600 to-pink-600 hover:text-white hover:bg-clip-border hover:bg-gradient-to-r from-orange-600 via-rose-600 to-pink-600">
                                                Register
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </section>
</body>
</html>